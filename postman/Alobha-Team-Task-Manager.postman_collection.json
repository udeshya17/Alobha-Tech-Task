{
  "info": {
    "_postman_id": "c9b6a7a3-6b2a-4e54-8e24-3f1e3e89f2a1",
    "name": "Alobha - Team Task Manager (Backend)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:4000/api" },
    { "key": "token", "value": "" },
    { "key": "teamId", "value": "" },
    { "key": "taskId", "value": "" },
    { "key": "userId", "value": "" }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      { "key": "token", "value": "{{token}}", "type": "string" }
    ]
  },
  "item": [
    {
      "name": "Health",
      "item": [
        {
          "name": "GET /health",
          "request": {
            "method": "GET",
            "url": { "raw": "{{baseUrl}}/health", "host": ["{{baseUrl}}"], "path": ["health"] }
          }
        }
      ]
    },
    {
      "name": "Auth",
      "item": [
        {
          "name": "POST /auth/login (sets token)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('login ok', function () {",
                  "  pm.response.to.have.status(200);",
                  "});",
                  "",
                  "const json = pm.response.json();",
                  "pm.collectionVariables.set('token', json.token);",
                  "pm.collectionVariables.set('userId', json.user?.id || '');"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": { "type": "noauth" },
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@demo.com\",\n  \"password\": \"Admin@12345\"\n}"
            },
            "url": { "raw": "{{baseUrl}}/auth/login", "host": ["{{baseUrl}}"], "path": ["auth", "login"] }
          }
        },
        {
          "name": "GET /auth/me",
          "request": {
            "method": "GET",
            "url": { "raw": "{{baseUrl}}/auth/me", "host": ["{{baseUrl}}"], "path": ["auth", "me"] }
          }
        }
      ]
    },
    {
      "name": "Users (Super Admin)",
      "item": [
        {
          "name": "GET /users",
          "request": {
            "method": "GET",
            "url": { "raw": "{{baseUrl}}/users", "host": ["{{baseUrl}}"], "path": ["users"] }
          }
        },
        {
          "name": "POST /users",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Team Admin\",\n  \"email\": \"teamadmin@demo.com\",\n  \"password\": \"Admin@12345\",\n  \"role\": \"TEAM_ADMIN\"\n}"
            },
            "url": { "raw": "{{baseUrl}}/users", "host": ["{{baseUrl}}"], "path": ["users"] }
          }
        },
        {
          "name": "PATCH /users/:userId",
          "request": {
            "method": "PATCH",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"name\": \"Updated Name\"\n}" },
            "url": { "raw": "{{baseUrl}}/users/{{userId}}", "host": ["{{baseUrl}}"], "path": ["users", "{{userId}}"] }
          }
        }
      ]
    },
    {
      "name": "Teams",
      "item": [
        {
          "name": "GET /teams",
          "request": {
            "method": "GET",
            "url": { "raw": "{{baseUrl}}/teams", "host": ["{{baseUrl}}"], "path": ["teams"] }
          }
        },
        {
          "name": "POST /teams (Super Admin)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "  const json = pm.response.json();",
                  "  pm.collectionVariables.set('teamId', json.id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Demo Team\"\n}"
            },
            "url": { "raw": "{{baseUrl}}/teams", "host": ["{{baseUrl}}"], "path": ["teams"] }
          }
        },
        {
          "name": "GET /teams/:teamId",
          "request": {
            "method": "GET",
            "url": { "raw": "{{baseUrl}}/teams/{{teamId}}", "host": ["{{baseUrl}}"], "path": ["teams", "{{teamId}}"] }
          }
        },
        {
          "name": "GET /teams/:teamId/user-candidates",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/teams/{{teamId}}/user-candidates?q=demo",
              "host": ["{{baseUrl}}"],
              "path": ["teams", "{{teamId}}", "user-candidates"],
              "query": [{ "key": "q", "value": "demo" }]
            }
          }
        },
        {
          "name": "POST /teams/:teamId/members",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"userId\": \"{{userId}}\",\n  \"role\": \"MEMBER\"\n}" },
            "url": { "raw": "{{baseUrl}}/teams/{{teamId}}/members", "host": ["{{baseUrl}}"], "path": ["teams", "{{teamId}}", "members"] }
          }
        },
        {
          "name": "PATCH /teams/:teamId/members/:userId",
          "request": {
            "method": "PATCH",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"role\": \"ADMIN\"\n}" },
            "url": {
              "raw": "{{baseUrl}}/teams/{{teamId}}/members/{{userId}}",
              "host": ["{{baseUrl}}"],
              "path": ["teams", "{{teamId}}", "members", "{{userId}}"]
            }
          }
        },
        {
          "name": "DELETE /teams/:teamId/members/:userId",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{baseUrl}}/teams/{{teamId}}/members/{{userId}}",
              "host": ["{{baseUrl}}"],
              "path": ["teams", "{{teamId}}", "members", "{{userId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Tasks",
      "item": [
        {
          "name": "GET /tasks (list)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/tasks?teamId={{teamId}}&page=1&pageSize=10",
              "host": ["{{baseUrl}}"],
              "path": ["tasks"],
              "query": [
                { "key": "teamId", "value": "{{teamId}}" },
                { "key": "page", "value": "1" },
                { "key": "pageSize", "value": "10" }
              ]
            }
          }
        },
        {
          "name": "POST /tasks (create)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "  const json = pm.response.json();",
                  "  pm.collectionVariables.set('taskId', json.id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"teamId\": \"{{teamId}}\",\n  \"title\": \"First task\",\n  \"description\": \"Created from Postman\",\n  \"status\": \"TODO\",\n  \"priority\": \"MEDIUM\",\n  \"dueDate\": null,\n  \"assigneeId\": null\n}"
            },
            "url": { "raw": "{{baseUrl}}/tasks", "host": ["{{baseUrl}}"], "path": ["tasks"] }
          }
        },
        {
          "name": "GET /tasks/:taskId",
          "request": {
            "method": "GET",
            "url": { "raw": "{{baseUrl}}/tasks/{{taskId}}", "host": ["{{baseUrl}}"], "path": ["tasks", "{{taskId}}"] }
          }
        },
        {
          "name": "PATCH /tasks/:taskId (update)",
          "request": {
            "method": "PATCH",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"status\": \"IN_PROGRESS\"\n}" },
            "url": { "raw": "{{baseUrl}}/tasks/{{taskId}}", "host": ["{{baseUrl}}"], "path": ["tasks", "{{taskId}}"] }
          }
        },
        {
          "name": "DELETE /tasks/:taskId (soft delete, team admin only)",
          "request": {
            "method": "DELETE",
            "url": { "raw": "{{baseUrl}}/tasks/{{taskId}}", "host": ["{{baseUrl}}"], "path": ["tasks", "{{taskId}}"] }
          }
        }
      ]
    },
    {
      "name": "Dashboard",
      "item": [
        {
          "name": "GET /dashboard/teams/:teamId/summary",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/dashboard/teams/{{teamId}}/summary",
              "host": ["{{baseUrl}}"],
              "path": ["dashboard", "teams", "{{teamId}}", "summary"]
            }
          }
        }
      ]
    }
  ]
}


